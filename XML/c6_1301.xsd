<?xml version="1.0" encoding="euc-kr"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    
    <!-- 루트 엘리먼트 선언 -->
    <xsd:element name="booklist" type="ctBooklist"/>
   
       
    <!-- 글로벌 콤플렉스 타입 정의 -->
        <xsd:complexType name="ctBooklist">
            <xsd:sequence>
                <xsd:element name="book" type="ctBook"  maxOccurs="unbounded" />
            </xsd:sequence>
        </xsd:complexType>   
       
        <xsd:complexType name="ctBook">
            <xsd:sequence>
                <xsd:element name="title" type="xsd:string" />
                <xsd:element name="price" type="ctPrice2" />
            </xsd:sequence>
        </xsd:complexType>
       
        <xsd:complexType name="ctPrice">
            <xsd:simpleContent>
                <xsd:extension base="xsd:int">
                    <xsd:attribute name="unit" type="xsd:string"  use="required"></xsd:attribute>   
                </xsd:extension>
            </xsd:simpleContent>
        </xsd:complexType>
       
   
            <xsd:complexType name="ctPrice2">
                <xsd:simpleContent>
                    <xsd:extension base="ctPrice">
                        <xsd:attribute name="card" type="xsd:boolean" use="required"></xsd:attribute>   
                    </xsd:extension>
                </xsd:simpleContent>
            </xsd:complexType>
   
  
   
</xsd:schema>
