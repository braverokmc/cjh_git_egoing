<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" >
    
    <!-- 루트 엘리먼트 선언 -->
    <xsd:element name="booklist" type="ctBooklist" />
    
    <!-- 글로벌 콤플렉스 타입 정의 -->
    <xsd:complexType name="ctBooklist">
        <xsd:sequence>
            <xsd:element name="book" type="ctBook" maxOccurs="unbounded"></xsd:element>
        </xsd:sequence>
    </xsd:complexType>
    
    
    <xsd:complexType name="ctBook">
        <xsd:sequence>
            <xsd:element name="title" type="xsd:string"/>
            <xsd:element name="author" type="xsd:string" />
            <xsd:element name="publisher" type="xsd:string" />
            <xsd:element name="price" type="xsd:int" />
            <xsd:element name="img" type="ctImg" minOccurs="0" />
        </xsd:sequence>
        
        <xsd:attribute name="id" type="xsd:string"/>
        <xsd:attribute name="kind" type="xsd:string" />
    </xsd:complexType>
    
    
    <xsd:complexType name="ctImg">
        <xsd:attribute name="src" type="xsd:anyURI" use="required"/>
    </xsd:complexType>
    
    
    
    
    
    
    
</xsd:schema>
