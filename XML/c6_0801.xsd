<?xml version="1.0" encoding="euc-kr"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

    <!-- 루트 엘리먼트 선언 -->
    <xsd:element name="책목록">
        <xsd:complexType>
            <xsd:sequence>
                
                <!-- 루트 엘리먼트의 자식 엘리먼트 선언 -->
                <xsd:element name="책" minOccurs="0" maxOccurs="unbounded">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name="제목" type="xsd:string"></xsd:element>
                            <xsd:element name="가격">
                                <xsd:complexType>
                                    <xsd:simpleContent>
                                        <xsd:extension base="xsd:int">
                                            <xsd:attribute name="단위" type="xsd:string" use="optional" default="원"></xsd:attribute>    
                                        </xsd:extension>
                                        
                                    </xsd:simpleContent>
                                </xsd:complexType>
                            </xsd:element>
                            
                            
                        </xsd:sequence>
                        <xsd:attribute name="종류" use="required" type="xsd:string"></xsd:attribute>
                    </xsd:complexType>
                </xsd:element>
                
                
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    
    




</xsd:schema>
